  										}
  								}
  							` 
							</script>
								}  icon={skill} />
					
					))
				}
		
			</div>
-->
		<div class="skills">
				{skills.map((skill: string) => {
					const iconClass = skill === 'mdi:shopify' ? 'icon-shopify' : '';
					return (
						<iconify-icon 
							class={`iconify ${iconClass}`}
							icon={skill} 
						/>
					);
				})}
			</div>
			
